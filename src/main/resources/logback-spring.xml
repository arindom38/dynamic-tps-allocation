<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <conversionRule conversionWord="hostName" converterClass="com.cafecoder.dynamictpsallocation.utill.HostNameConverter"/>
    <springProperty name="appName" source="spring.application.name"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %-30.30hostName | %-20.20thread | %clr(${LOG_LEVEL_PATTERN:-%5p}){magenta} | [${appName}, traceId=%X{traceId:-}, spanId=%X{spanId:-}] | %clr(%-40.40logger{40}){blue} |  %-16X{context} |  %m%n"/>
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %-25.25hostName | %-20.20thread | %clr(${LOG_LEVEL_PATTERN:-%5p}) | [${appName}, traceId=%X{traceId:-}, spanId=%X{spanId:-}] | %-40.40logger{40} |  %-16X{context} | %m%n"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path"/>

    <springProfile name="k8,dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_LOG_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
